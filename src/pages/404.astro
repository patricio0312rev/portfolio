---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button } from '@/components/ui/Button';
---

<BaseLayout title="404 - Page Not Found">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-9xl font-bold gradient-text mb-4">404</h1>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        Page Not Found
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <Button variant="primary" size="lg" href="/">
        Go Back Home
      </Button>
    </div>
  </div>
</BaseLayout>
